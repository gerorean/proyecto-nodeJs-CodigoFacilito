extends ./layout.jade
block contenido
  h1 Formulario
  form(action="/sessions",method="POST")
    div(class="form-group")
        label(for="email") Email
        input(type="text", name="email", placeholder="_Email", id="email", class="form-control")
    div(class="form-group")
        label(for="password") Contraseña
        input(type="password", name="password", placeholder="_Contraseña", id="password", class="form-control")
    div
        input(type="submit" value="Iniciar sesión" class="btn btn-info")